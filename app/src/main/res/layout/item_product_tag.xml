<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/baseColorLight"
        app:cardCornerRadius="20dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_container"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="20dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cv_icon"
            android:layout_width="25dp"
            android:layout_height="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_android_black_24dp"
            android:tint="@color/baseColorLight"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Makanan Khas"
            app:layout_constraintLeft_toRightOf="@+id/cv_icon"
            app:layout_constraintTop_toTopOf="@id/cv_icon"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@color/baseColorLight"
            app:layout_constraintBottom_toBottomOf="@id/cv_icon"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>