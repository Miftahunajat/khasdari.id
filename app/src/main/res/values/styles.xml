<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_black_24dp</item>
    </style>

    <style name="defaultTextStyleBlack" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="RatingBar" parent="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:rating">4.5</item>
    </style>

</resources>
